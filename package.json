{
  "name": "macrosight-site",
  "version": "2.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src/ public/ --fix",
    "format": "prettier --write src/ public/",
    "html:lint": "htmlhint 'public/*.html'",
    "html:format": "prettier --write 'public/*.html'",
    "ci": "npm run lint && npm run format && npm run build"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "htmlhint": "^1.1.5",
    "sanitize-html": "^2.7.0"
  }
}
